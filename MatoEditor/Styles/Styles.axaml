<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="Color1">#FFFFFF</Color>
                    <Color x:Key="Color2">#EEEEEE</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="Color1">#000000</Color>
                    <Color x:Key="Color2">#111111</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
    
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <Button>111</Button>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="StackPanel, Panel, Grid">
        <Setter Property="Background" Value="{DynamicResource Color1}"/>
    </Style>
    
    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource Color1}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>
</Styles>
