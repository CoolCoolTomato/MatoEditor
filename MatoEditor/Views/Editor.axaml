<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MatoEditor.ViewModels"
             xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MatoEditor.Views.Editor"
             x:DataType="viewModels:EditorViewModel">
    <Grid ColumnDefinitions="*, 4, *">
        <AvaloniaEdit:TextEditor Grid.Column="0"/>
        <GridSplitter Grid.Column="1" Background="#303030" ResizeDirection="Columns"/>
        <WebView HtmlContent="{Binding html}" Grid.Column="2"/>
    </Grid>
</UserControl>
